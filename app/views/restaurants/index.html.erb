<h1>Here are our restaurants:</h1>

<% @restaurants.each do |id,restaurant| %>
<ul>
  <li><%= link_to restaurant[:name], restaurant_path(id) %></li>
</ul>
<% end %>

<form action="/restaurants" method="get">
  <input type="text" name="food_type" placeholder="What kind of food?">
  <input type="submit">
</form>

<h1>Category selected is <%= @category %></h1>

<h1>Lets create one restaurant</h1>
<form action="/restaurants" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="name" placeholder="Name">
  <input type="text" name="address" placeholder="Address">
  <input type="submit">
</form>
